<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-success">
        <a class="navbar-brand" asp-page="/home">
            <img src="~/static/logo.png" alt="Logo" height="50" width="50">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <li class="nav-item d-flex justify-content-center">
            <span class="nav-link font-weight-bold text-white">Cashier Mode</span>
        </li>
        <li class="nav-item d-flex justify-content-center">
            <a class="nav-link text-white-50" asp-page="/Index">Switch</a>
        </li>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item @(Context.Request.Path.StartsWithSegments("/home") ? "active" : "")">
                    <a class="nav-link" asp-page="/home">Home</a>
                </li>
                <li class="nav-item @(Context.Request.Path.StartsWithSegments("/orders") ? "active" : "")">
                    <a class="nav-link" asp-page="/orders">Orders</a>
                </li>
                <li class="nav-item @(Context.Request.Path.StartsWithSegments("/products") ? "active" : "")">
                    <a class="nav-link" asp-page="/products">Products</a>
                </li>
                
                
            </ul>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Bootstrap JavaScript dependencies -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
